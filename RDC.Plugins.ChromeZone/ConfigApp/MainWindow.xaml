<Window x:Class="ConfigApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="393*"/>
        </Grid.RowDefinitions>
        <Grid>
            <ComboBox Width="130" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="EnvironmentDropDown" SelectionChanged="EnvironmentDropDown_OnSelectionChanged"></ComboBox>
            <Button Content="Find Environments" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" Width="115" x:Name="BrowseFolder" Click="BrowseFolder_Click"/>
        </Grid>
        <ScrollViewer x:Name="ContentScrollViewer" Grid.Row="1"></ScrollViewer>
    </Grid>
</Window>
